// prisma.config.ts
// 1) .env 자동 로드: 이 한 줄이 중요합니다.
import "dotenv/config";

// 2) Prisma 6 설정
import { defineConfig, env } from "prisma/config";

export default defineConfig({
  // Prisma schema 경로
  schema: "prisma/schema.prisma",

  // 마이그레이션 폴더(기본값과 같지만 명시)
  migrations: {
    path: "prisma/migrations",
  },

  // 엔진 선택(원래 쓰시던 값 유지)
  engine: "classic",

  // 3) 데이터소스 URL을 .env의 DATABASE_URL에서 읽기
  datasource: {
    url: env("DATABASE_URL"),
  },
});
